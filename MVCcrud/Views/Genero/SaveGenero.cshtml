@model Application.ViewModels.GeneroViewModel
@{
    bool editMode = Model.Id != 0;
    ViewData["Title"] = editMode ? "Modify gender" : "add new gender";
}
<section>
    <div class="container">
        <div class="columns is-centered mt-5">
            <div class="column is-7">
                <div class="box">

                    <div class="field">
                        <h4 class="content has-text-centered title is-size-6">@(editMode ? "Editing gender: " + Model.Nombre : "Adding new gender")</h4>
                    </div>

                        <form method="post" asp-controller="Genero" asp-action="@(editMode ? "Edit" : "Create")">

                            <div class="field">
                                <label asp-for="Nombre" class="label">Name: </label>
                                <div>
                                    <input type="text" asp-for="Nombre" class="input">
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <input type="hidden" asp-for="Id" />

                            <div class="field is-grouped is-grouped-centered">
                                <p class="control">
                                    <button type="submit" class="button is-primary">
                                    Submit
                                    </button>
                                </p>
                                <p class="control">
                                    <a  asp-controller="Genero" asp-action="Index" class="button is-light">
                                    Cancel
                                    </a>
                                </p>
                            </div

                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>