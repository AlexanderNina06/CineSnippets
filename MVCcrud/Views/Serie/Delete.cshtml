@model Application.ViewModels.saveSerieViewModel
@{
    ViewData["Title"] = "Eliminar serie";
}
<section>
    <div class="container">
        <div class="columns is-centered mt-5">
            <div class="column is-7">
                <div class="box">

                    <div class="card-header bg-dark text-light">
                        <h4>Are you sure you want to delete tv show <span class="title is-size-6">@Model.Nombre</span>?</h4>
                    </div>

                    <form method="post" asp-controller="Serie" asp-action="DeletePost">

                        <input type="hidden" asp-for="Id" />

                        <div class="field is-grouped is-grouped-centered mt-5">
                            <p class="control">
                                <button type="submit" class="button is-danger">
                                    Delete
                                </button>
                            </p>
                            <p class="control">
                                <a asp-controller="Serie" asp-action="Index" class="button is-light">
                                    Cancel
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
