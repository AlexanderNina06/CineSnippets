@model List<Application.ViewModels.ProductoraViewModel>

@{
    ViewData["Title"] = "Productora";
}

<section>
    <div class="container">

        <div class="buttons is-right">
            <a asp-controller="Productora" asp-action="Create" class="button is-primary is-outlined is-responsive">Add studio</a>
        </div>

            @if (Model == null || Model.Count == 0)
            {
                <h2>No studios available</h2>
            }
            else
            {
            <div class="columns is-multiline">
                @foreach (Application.ViewModels.ProductoraViewModel item in Model)
                {
                    <div class="column is-4-desktop is-6-tablet">
                        <div class="card">
                            <div class="card-content mt-4">
                                <div class="content">
                                    <div class="is-flex is-justify-content-center is-align-items-center">
                                        <small class="is-size-6 has-text-weight-semibold">@item.Nombre</small>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="card-footer-item">
                                        <a asp-controller="Productora" asp-action="Edit" asp-route-id="@item.Id" class="button is-fullwidth has-text-grey-light is-uppercase" style="border: none;" data-config-id="primary-action1">Edit</a>
                                        <a asp-controller="Productora" asp-action="Delete" asp-route-id="@item.Id" class="button is-fullwidth has-text-grey-light is-uppercase" style="border: none;" data-config-id="primary-action1">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            }
    </div>
</section>